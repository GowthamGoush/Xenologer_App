<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/ic_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginHorizontal="40dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/resultImage1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_nasa_logo" />

            <TextView
                android:id="@+id/resultName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resultImage1"
                android:layout_marginTop="4dp"
                android:text="TITLE"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/resultText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/resultName2"
                android:layout_marginTop="8dp"
                android:text="NASA ID"
                android:textStyle="bold"
                android:gravity="center"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>